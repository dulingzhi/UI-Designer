// 包含官方模板
IncludeFile "UI\FrameDef\UI\EscMenuTemplates.fdf",

// ============================================
// 主背包面板 - 带边框和背景
// ============================================
Frame "BACKDROP" "InventoryMainPanel" {
    Width 0.320,
    Height 0.400,
    
    // 居中显示
    SetPoint CENTER, "UIParent", CENTER, 0.0, 0.0,
    
    // 背景样式 - 使用任务对话框样式
    BackdropTileBackground,
    BackdropBackground "QuestDialogBackground",
    BackdropCornerFlags "UL|UR|BL|BR|T|L|B|R",
    BackdropCornerSize 0.032,
    BackdropBackgroundSize 0.256,
    BackdropBackgroundInsets 0.006 0.006 0.006 0.006,
    BackdropEdgeFile "QuestDialogBorder",
    BackdropBlendAll,
}

// ============================================
// 标题栏背景
// ============================================
Frame "BACKDROP" "InventoryTitleBar" {
    Width 0.308,
    Height 0.036,
    SetPoint TOP, "InventoryMainPanel", TOP, 0.0, -0.006,
    
    BackdropTileBackground,
    BackdropBackground "EscMenuButtonBackground",
    BackdropBlendAll,
}

// ============================================
// 标题文本
// ============================================
Frame "TEXT" "InventoryTitleText" {
    SetPoint CENTER, "InventoryTitleBar", CENTER, 0.0, 0.0,
    
    Text "背包系统",
    FontJustificationH JUSTIFYCENTER,
    FontJustificationV JUSTIFYCENTER,
    FontFlags "FIXEDSIZE",
    FontHeight 0.014,
    FontColor 1.0 0.8 0.2 1.0,  // 金色标题
}

// ============================================
// 关闭按钮
// ============================================
Frame "GLUEBUTTON" "InventoryCloseButton" INHERITS WITHCHILDREN "EscMenuButtonTemplate" {
    Width 0.032,
    Height 0.032,
    SetPoint TOPRIGHT, "InventoryMainPanel", TOPRIGHT, -0.010, -0.010,
    
    ButtonText "InventoryCloseButtonText",
